<div class="container mx-auto d-flex flex-column align-items-center">
  <head>
    <h4>請輸完成修改</h4>
  </head>

  <form class="m-5" action="/expense/{{expense._id}}?_method=PUT" method="POST">
    <div class="form-group form-inline">
      <label for="name">名稱</label>
      <input
        type="name"
        class="form-control ml-2 col-10"
        id="name"
        name="name"
        placeholder="name"
        value="{{expense.name}}"
      />
    </div>
    <div class="form-group form-inline">
      <label for="merchant">商家</label>
      <input
        type="name"
        class="form-control ml-2 col-10"
        id="merchant"
        name="merchant"
        placeholder="merchant"
        value="{{expense.merchant}}"
      />
    </div>
    <div class="form-group form-inline">
      <label for="date">日期</label>
      <input
        type="date"
        class="form-control ml-2 col-10"
        id="date"
        name="date"
        placeholder="date"
        value="{{expense.date}}"
      />
    </div>
    <div class="form-group form-inline">
      <label for="category">類別</label>
      <select id="category" class="form-control ml-2 col-10" name="category">
        <option value="housewares">家居物業</option>
        <option value="transportation">交通出行</option>
        <option value="entertainment">休閒娛樂</option>
        <option value="consumption">餐飲食品</option>
        <option value="others">其他</option>
      </select>
    </div>
    <div class="form-group form-inline">
      <label for="amount">金額</label>
      <input
        type="number"
        class="form-control ml-2 col-10"
        id="amount"
        name="amount"
        min="1"
        value="{{expense.amount}}"
      />
    </div>
    <div class="text-center">
      <button type="submit" class="btn btn-primary">修改</button>
    </div>
  </form>
</div>
<script>
  document.querySelector('option[value={{expense.category}}]').selected = true
</script>